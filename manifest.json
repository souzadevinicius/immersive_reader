{
"update_url": "https://clients2.google.com/service/update2/crx",

  "name": "Use Immersive Reader on Websites FORK",
  "description": "Select text, right-click, and Microsoft's Immersive Reader will help you read it",
  "icons": {
    "16": "book16.png",
    "48": "book48.png",
    "128": "book128.png"
  },
  "version": "1.201",
  "permissions": ["activeTab", "tabs", "storage", "contextMenus",

  "notifications",
  "http://*/",
  "https://*/",
  "*://*/*"
],
"optional_permissions": [
  "unlimitedStorage",
  "*://*/*"
],
  "background": {
    "scripts": ["background.js"],
    "persistent": false
  },
  "browser_action": {
    "default_title": "Read text on this page"
  },
  "manifest_version": 2,
  "commands": {
    "_execute_browser_action": {
        "suggested_key": "Ctrl+Shift+L",
        "description": "Toggle dark body"
    }
  }
}
